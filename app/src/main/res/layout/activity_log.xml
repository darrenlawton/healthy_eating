<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/app_background"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/date_text"
        android:textSize="25sp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorAccent"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:text="I Did Good!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/bHealthy"
        android:textSize="30sp"
        android:minWidth="100dip"
        android:layout_below="@+id/output_consecutive"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black" />

    <Button
        android:text="Tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/bNonHealthy"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bHealthy"
        android:layout_alignEnd="@+id/bHealthy"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/output_consecutive"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_below="@+id/date_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bBack"
        android:background="@android:drawable/ic_menu_revert"
        android:scaleX=".55"
        android:layoutDirection="rtl"
        android:layout_alignLeft="@id/imageView"/>

</RelativeLayout>