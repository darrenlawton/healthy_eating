<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="darrenlawton.sausagesizzle.MainActivity"
    android:background="@android:color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/app_background"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_support"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        style="@android:style/Widget.Button.Small"
        android:onClick="activitySupport"
        android:layout_below="@+id/b_log"
        android:layout_alignStart="@+id/b_log"
        android:background="@android:color/holo_orange_light"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:layout_alignEnd="@+id/b_log" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_log"
        android:layout_marginTop="285dp"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        style="@android:style/Widget.Button.Small"
        android:onClick="logHealth"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_light"
        android:textAllCaps="true"
        android:text="daily log"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black" />

    <darrenlawton.sausagesizzle.CircularImageView
        android:id="@+id/circular_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/cutedog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:clickable="true" />

</RelativeLayout>
